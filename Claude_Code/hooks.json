{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/capture_hooks.py --event=pretool --input-file=/tmp/pretooluse-hook-input.json --config=~/.claude/hook_config.json"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/capture_hooks.py --event=posttool --input-file=/tmp/posttooluse-hook-input.json --config=~/.claude/hook_config.json"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/capture_hooks.py --event=notification --input-file=/tmp/notification-hook-input.json --config=~/.claude/hook_config.json"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/capture_hooks.py --event=UserPromptSubmit --finalize-settings --config=~/.claude/hook_config.json"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/capture_hooks.py --event=stop --finalize-settings --config=~/.claude/hook_config.json"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/capture_hooks.py --event=subagent-stop --config=~/.claude/hook_config.json"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/capture_hooks.py --event=pre-compact --config=~/.claude/hook_config.json"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/capture_hooks.py --event=session-start --config=~/.claude/hook_config.json"
          }
        ]
      }
    ]
  }
}